<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        android:text="@string/employer_dialog_quick_invite_title"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/blackSquareColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        android:id="@+id/dialog_quick_invite_main"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="@string/employer_dialog_quick_invite_live"
            android:textColor="@color/redSquareColor"
            android:layout_margin="14dp"
            android:id="@+id/dialog_quick_invite_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="@string/employer_dialog_quick_invite_new"
            android:textColor="@color/redSquareColor"
            android:layout_margin="14dp"
            android:id="@+id/dialog_quick_invite_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>