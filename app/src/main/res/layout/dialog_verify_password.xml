<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        app:josefin_style="light"
        android:layout_marginTop="24dp"
        android:textColor="@color/blackSquareColor"
        android:textSize="20sp"
        android:text="@string/payments_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        app:josefin_style="italic"
        android:layout_marginTop="24dp"
        android:textColor="@color/blackSquareColor"
        android:textSize="16sp"
        android:text="@string/payments_password_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <construction.thesquare.shared.view.widget.JosefinSansEditText
        app:josefin_style="light"
        android:layout_marginTop="24dp"
        android:textColor="@color/blackSquareColor"
        android:textSize="20sp"
        android:hint="password"
        android:inputType="textPassword"
        android:id="@+id/dialog_payment_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="42dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/yes"
            android:text="Confirm"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/redSquareColor"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/no"
            android:text="Cancel"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/square_bordered_thin"
            android:textColor="@color/redSquareColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>