<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/ibtnSearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/actvSearch"
        android:layout_alignBottom="@+id/actvSearch"
        android:src="@android:drawable/ic_search_category_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:tint="@color/redSquareColor" />

    <construction.thesquare.shared.view.widget.JosefinSansEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actvSearch"
        android:layout_toLeftOf="@+id/ibtnClearSeachItem"
        android:layout_toStartOf="@+id/ibtnClearSeachItem"
        android:layout_toRightOf="@+id/ibtnSearchItem"
        android:layout_toEndOf="@+id/ibtnSearchItem"
        android:hint="@string/filter"

        style="@style/BaseEditTextTransparent"
        android:padding="3dp" />

    <ImageButton
        android:id="@+id/ibtnClearSeachItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/actvSearch"
        android:layout_alignBottom="@+id/actvSearch"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="3dp"
        android:paddingStart="3dp"
        android:background="@android:color/transparent"
        android:tint="@color/redSquareColor" />
</RelativeLayout>


