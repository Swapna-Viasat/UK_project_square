<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Company Name -->
    <construction.thesquare.shared.view.widget.JosefinSansTextView
        android:id="@+id/company_name"
        android:textColor="@color/redSquareColor"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:josefin_style="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Company Logo -->
    <ImageView
        android:background="@color/black_overlay"
        android:id="@+id/companyLogo"
        android:layout_width="78dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <!-- Role and Years of Experience -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/salary_layout"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_role"
                    style="@style/title_red_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRICKLAYER"
                    app:josefin_style="light" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_experience_years"
                    style="@style/subheader_dark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 YEARS EXPERIENCE"
                    android:textAllCaps="true"
                    app:josefin_style="light" />

            </LinearLayout>

            <!-- Salary rate and period -->
            <LinearLayout
                android:id="@+id/salary_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_item_payment_rate"
                    style="@style/title_red_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:josefin_style="light"
                    tools:text="40 000" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_item_payment_rate_per"
                    style="@style/body_red_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/redSquareColor"
                    app:josefin_style="light"
                    tools:text="Per hour" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:id="@+id/job_id"
                android:textSize="12dp"
                app:josefin_style="italic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="62dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Date -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:tint="@color/redSquareColor" />
                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_item_start_date"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    app:josefin_style="light" />

                <!-- Location -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_place_black_24dp"
                    android:tint="@color/redSquareColor" />
                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/job_item_work_place"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:text="Candem"
                    app:josefin_style="light" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>