<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="#ededed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackSquareColor"
        android:textSize="14sp"
        android:paddingBottom="12dp"
        android:id="@+id/english_header"
        android:text="@string/create_job_english"
        app:josefin_style="bold"/>

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        app:josefin_style="italic"
        android:textSize="16sp"
        android:id="@+id/title"
        android:layout_below="@+id/english_header"
        android:textColor="@color/blackSquareColor"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:clickable="false"
        android:layout_below="@+id/english_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>

<View
    android:id="@+id/bottom"
    android:layout_gravity="bottom"
    android:background="@color/graySquareColor"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
</android.support.v7.widget.CardView>