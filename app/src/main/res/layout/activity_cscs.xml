<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/lightgraySquareColor"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <!-- Main Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:padding="20dp">

            <!-- Surname -->
            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_cscs_surname"
                style="@style/body_dark_text"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/surname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/surname"
                    android:maxLines="1"
                    style="@style/square_edit_text"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Registration -->
            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_cscs_registration"
                android:layout_marginTop="15dp"
                style="@style/body_dark_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5"/>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/reg_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    style="@style/square_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5" />
            </LinearLayout>

        </LinearLayout>
        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/error_message"
            android:padding="10dp"
            style="@style/body_red_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verify"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/verify_cscs"
                android:padding="10dp"
                style="@style/BaseButton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>