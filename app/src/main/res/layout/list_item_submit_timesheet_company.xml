<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_padding"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginStart="@dimen/small_padding"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/lightSquareColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/submit_timesheet_company_image"
            android:background="@color/blackSquareColor"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_marginBottom="@dimen/medium_padding"/>

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/submit_timesheet_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GALLIARD"
            style="@style/title_red_text"
            app:josefin_style="light"
            />

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/submit_timesheet_days_worked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week from Sat 16.02.2016 to Fri 22.02.2016"
            style="@style/caption_dark_text"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>