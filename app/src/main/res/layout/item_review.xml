<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/lightgraySquareColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Requested By -->
        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/item_requested_by"
            android:textColor="@color/graySquareColor"
            android:textSize="12sp"
            android:layout_margin="12dp"
            android:layout_gravity="end|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

       <!-- &lt;!&ndash; Company Logo &ndash;&gt;
        <ImageView
            android:id="@+id/item_review_logo"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_width="78dp"
            android:layout_height="42dp"/>-->

        <!-- Company Name -->
        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/item_review_company"
            android:text="Company Name"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/redSquareColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Requested Date -->
        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/item_review_date"
            android:textStyle="italic"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
           android:textColor="@color/graySquareColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

       <!-- &lt;!&ndash; Rating &ndash;&gt;
        <construction.thesquare.shared.view.widget.RatingView
            android:id="@+id/item_review_rating"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->

