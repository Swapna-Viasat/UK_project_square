<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingStart="@dimen/medium_padding"
    tools:context="construction.thesquare.worker.myaccount.ui.fragment.MyAccountFinancialInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/lightSquareColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Name"
                    style="@style/caption_dark_text" />

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/fin_info_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:inputType="text"
                    android:hint="Bank"
                    style="@style/square_edit_text"
                    android:textSize="20sp"
                    android:maxLines="1" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Account Number"
                    style="@style/caption_dark_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding">

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="1"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="2"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="3"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="4"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="5"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="6"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_account_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="7"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort Code"
                    style="@style/caption_dark_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding">

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"
                        android:inputType="number"
                        android:hint="1"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="2"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"
                        android:inputType="number"
                        android:hint="3"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="4"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_sort_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="5"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Home Address"
                    style="@style/caption_dark_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="W14 0AA"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:layout_toLeftOf="@+id/billing_item_button"
                        android:layout_toStartOf="@+id/billing_item_button" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:id="@+id/fin_info_search_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBaseline="@id/fin_info_search"
                        android:text="SEARCH"
                        style="@style/body_red_text"
                        app:josefin_style="bold"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        style="@style/subheader_gray_text" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:id="@+id/fin_info_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="71 Bolingbroke Road W14 0AA"
                        style="@style/subheader_dark_text" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National Insurance Number"
                    style="@style/caption_dark_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding">

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="A"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"
                        android:inputType="text"
                        android:hint="B"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="1"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="2"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="3"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="4"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="5"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"
                        android:inputType="number"
                        android:hint="6"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />

                    <construction.thesquare.shared.view.widget.JosefinSansEditText
                        android:id="@+id/fin_info_insurance_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="A"
                        style="@style/square_edit_text"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unique Tax Reference Number (UTR)"
                    style="@style/caption_dark_text" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If we do not have your UTR the applicable rate of tax shall be 30% (rather than 20%) on accordance with CIS rules"
                    style="@style/caption_gray_text" />

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/fin_info_utr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:inputType="text"
                    android:hint="1234567890K"
                    style="@style/square_edit_text"
                    android:textSize="20sp"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limited company registration number"
                        style="@style/caption_dark_text" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (If applicable)"
                        style="@style/caption_gray_text" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/fin_info_lcrn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:inputType="text"
                    android:hint="1234567890K"
                    style="@style/square_edit_text"
                    android:textSize="20sp"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company VAT number"
                        style="@style/caption_dark_text" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (If applicable)"
                        style="@style/caption_gray_text" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/fin_info_vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:inputType="text"
                    android:hint="1234567890K"
                    style="@style/square_edit_text"
                    android:textSize="20sp"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gross Payment Status certificate"
                        style="@style/caption_dark_text" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (If applicable)"
                        style="@style/caption_gray_text" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.JosefinSansEditText
                    android:id="@+id/fin_info_gpsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:inputType="text"
                    android:hint="1234567890K"
                    style="@style/square_edit_text"
                    android:textSize="20sp"
                    android:maxLines="1" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a photo of your passport photo page"
                    style="@style/caption_dark_text" />

                <ImageView
                    android:id="@+id/fin_info_passport_photo"
                    android:layout_gravity="center"
                    android:background="#F0F0F0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/upload_picture" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a photo of a recent utility bill with your name and address"
                    style="@style/caption_dark_text" />

                <ImageView
                    android:id="@+id/fin_info_bill_photo"
                    android:layout_gravity="center"
                    android:background="#F0F0F0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/upload_picture" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>
