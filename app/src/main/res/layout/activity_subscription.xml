<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close"
            android:layout_margin="12dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:textSize="20sp"
            android:textColor="@color/blackSquareColor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/close"
            android:text="@string/employer_payments"
            app:josefin_style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_subscription"
        android:elevation="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="@color/whiteSquareColor"
        app:tabIndicatorColor="@color/redSquareColor"
        app:tabSelectedTextColor="@color/redSquareColor"
        app:tabTextColor="@color/redSquareColor"
        app:tabTextAppearance="@style/Tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>