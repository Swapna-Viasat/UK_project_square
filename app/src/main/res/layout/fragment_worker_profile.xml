<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/bookedBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:padding="16dp"
            android:text="Booked"
            app:josefin_style="italic"
            android:textAlignment="center"
            android:textColor="@color/whiteSquareColor"
            android:visibility="gone" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/offered_hint_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="@drawable/ic_like_tab"
                android:tint="@android:color/white" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                style="@style/subheader_white_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:padding="10dp"
                android:id="@+id/offered_hint_text"
                android:text="@string/offered_hint"
                app:josefin_style="italic" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/content_worker_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redSquareColor"
            android:padding="14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_like"
                android:tint="@color/whiteSquareColor"
                android:id="@+id/likeImage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/worker_view_profile_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bob"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_view_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    app:josefin_style="light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:id="@+id/worker_view_profile_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:textAllCaps="true"
                        android:textColor="@color/blackSquareColor"
                        android:textSize="18sp"
                        app:josefin_style="italic"
                        tools:text="ADMINISTRATOR" />

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
                        android:id="@+id/worker_view_profile_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingTop="6dp"
                        android:textAllCaps="true"
                        android:textColor="@color/blackSquareColor"
                        android:textSize="18sp"
                        app:josefin_style="italic"
                        tools:text="/ 15 YEARS EXPERIENCE" />
                </LinearLayout>

                <construction.thesquare.shared.view.widget.RatingView
                    android:id="@+id/worker_view_profile_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    app:editable="no" />
            </LinearLayout>

        </FrameLayout>

        <!-- Worker Details -->
        <LinearLayout
            android:id="@+id/content_worker_details_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/contactWorkerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkSquareColor"
                android:padding="14dp"
                android:visibility="gone">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_contacts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/worker_contact_info"
                    android:textColor="@color/whiteSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_email"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_contacts_title"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/whiteSquareColor"
                    android:textSize="14sp"
                    app:josefin_style="italic" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_phone"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_email"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/whiteSquareColor"
                    android:textSize="14sp"
                    app:josefin_style="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/workerBioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_bio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/employer_worker_details_bio"
                    android:textColor="@color/blackSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_bio_text"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_bio_title"
                    android:layout_marginTop="8dp"
                    android:hint="@string/employer_worker_details_bio_placeholder"
                    android:textSize="14sp"
                    app:josefin_style="italic" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_nationality_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_nationality"
                    android:textColor="@color/blackSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_nationality_value"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/worker_profile_languages_title"
                    android:textSize="14sp"
                    app:josefin_style="italic" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_english_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_nationality_title"
                    android:layout_marginTop="8dp"
                    android:text="@string/worker_english_level"
                    android:textColor="@color/blackSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_english_value"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/worker_profile_nationality_title"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/worker_profile_languages_title"
                    android:textSize="14sp"
                    app:josefin_style="italic" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_languages_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_english_title"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/onboarding_languagesspoken"
                    android:textColor="@color/blackSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_languages_value"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/worker_profile_english_title"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/worker_profile_languages_title"
                    android:textSize="14sp"
                    app:josefin_style="italic" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_birthday_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/blackSquareColor" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_birthday_value"
                    style="@style/caption_black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/worker_profile_birthday_title"
                    android:textSize="14sp"
                    app:josefin_style="italic" />

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/date_of_birth_status"
                    style="@style/TextRedGraftrsBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/worker_details_provided"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/worker_profile_nis_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <construction.thesquare.shared.view.widget.JosefinSansTextView
