        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 01 -->
        <android.support.v7.widget.CardView
            app:cardElevation="4dp"
            android:id="@+id/understand_1"
            style="@style/UnderstandingHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:text="@string/understanding_first_1_header"
                android:textColor="@color/blackSquareColor"
                android:textSize="18sp"
                app:josefin_style="italic"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            app:ael_expanded="false"
            android:orientation="vertical"
            app:ael_duration="500"
            app:ael_interpolator="bounce"
            android:id="@+id/understand_1_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:text="@string/understanding_first_1_text"
                style="@style/UnderstandingBody"
                android:textColor="@color/blackSquareColor"
                app:josefin_style="light"
                android:layout_margin="@dimen/understanding_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

