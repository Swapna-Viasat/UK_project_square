<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shared.settings.fragments.SettingsSocialFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon_fb"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_facebook"
                    android:tint="@color/redSquareColor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/social_fb"
                    android:padding="12dp"
                    app:josefin_style="italic"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_fb"
                    android:text="@string/employer_settings_sync_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Switch
                    android:id="@+id/sync_fb"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_marginLeft="58dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:id="@+id/icon_twtr"
                    android:src="@drawable/ic_twitter"
                    android:tint="@color/redSquareColor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/social_twtr"
                    android:padding="12dp"
                    app:josefin_style="italic"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_twtr"
                    android:text="@string/employer_settings_sync_twtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Switch
                    android:id="@+id/sync_twtr"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
