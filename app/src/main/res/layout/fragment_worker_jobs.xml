<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/worker_jobs_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteSquareColor"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/redSquareColor"
        app:tabMode="fixed"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"

        app:tabSelectedTextColor="@color/redSquareColor"
        app:tabTextAppearance="@style/Tab"
        app:tabTextColor="@color/redSquareColor"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/worker_jobs_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>