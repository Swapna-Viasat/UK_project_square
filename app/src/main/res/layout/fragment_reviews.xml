<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/worker_reviews_tablayout"
        app:tabMode="fixed"
        android:elevation="2dp"
        app:tabGravity="fill"
        android:background="@color/whiteSquareColor"
        app:tabIndicatorColor="@color/redSquareColor"
        app:tabSelectedTextColor="@color/redSquareColor"
        app:tabTextColor="@color/redSquareColor"
        app:tabTextAppearance="@style/Tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/worker_reviews_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>