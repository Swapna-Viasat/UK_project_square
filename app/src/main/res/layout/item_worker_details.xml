<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/red_bullet"
        android:tint="@color/redSquareColor" />

    <construction.thesquare.shared.view.widget.StrikeJosefinSansTextView
        android:id="@+id/worker_details"
        style="@style/caption_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/status"
        android:text="Qualification"
        android:textSize="14sp"
        app:josefin_style="italic" />

</RelativeLayout>