<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:textSize="26sp"
            app:josefin_style="light"
            android:id="@+id/title"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:textColor="@color/blackSquareColor"
            android:text="@string/create_job_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:text="@string/create_job_limit"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:josefin_style="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/include_filter"/>

        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:textSize="18sp"
            app:josefin_style="italic"
            android:id="@+id/suggest_role"
             android:layout_marginBottom="4dp"
            android:textAlignment="center"
            android:text="@string/suggest_skill"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:textColor="@color/redSquareColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/top"
        android:layout_marginBottom="76dp"
        android:id="@+id/create_job_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <construction.thesquare.shared.view.widget.JosefinSansTextView
        android:background="@color/redSquareColor"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="18dp"
        android:textAllCaps="true"
        android:id="@+id/next"
        android:textColor="@android:color/white"
        app:josefin_style="semiBold"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>