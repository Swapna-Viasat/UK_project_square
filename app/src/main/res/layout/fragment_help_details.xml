<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/worker_search_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_gravity="center" >
                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:id="@+id/contact_us"
                android:textAlignment="center"
                android:text="@string/help_contact_us"
                android:drawableBottom="@android:drawable/sym_action_email"
                android:layout_width="match_parent"
                app:josefin_style="light"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <construction.thesquare.shared.view.widget.JosefinSansTextView
            android:id="@+id/no_matches"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/help_no_matches"
            android:drawableBottom="@android:drawable/sym_action_email"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>