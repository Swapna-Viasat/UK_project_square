<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"> 

    <android.support.design.widget.TabLayout
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:id="@+id/tabLayoutFragmentMyGraftrs"
        android:background="@color/whiteSquareColor"
        app:tabIndicatorColor="@color/redSquareColor"
        app:tabSelectedTextColor="@color/redSquareColor"
        app:tabTextColor="@color/redSquareColor"
        app:tabTextAppearance="@style/Tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerFragmentMyGraftrs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>