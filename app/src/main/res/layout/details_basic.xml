<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="12dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/blackSquareColor"
                android:text="Basic Subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/blackSquareColor"
                android:text="Features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:layout_marginTop="12dp"
                android:textColor="@color/blackSquareColor"
                android:text="Unlimited job promotions
                        \nUnlimited matches to relevant workers
                        \nHire anytime, from any device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/blackSquareColor"
                android:textSize="16sp"
                android:text="@string/payments_basic_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/blackSquareColor"
                android:text="@string/payments_period2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/redSquareColor"
                android:textSize="16sp"
                android:text="20 bookings"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:textColor="@color/blackSquareColor"
                android:text="Â£24.95 per booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>