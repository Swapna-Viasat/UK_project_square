<resources>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/redSquareColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkSquareColor</item>
        <item name="colorPrimaryDark">@color/blackSquareColor</item>
        <item name="colorAccent">@color/redSquareColor</item>
        <item name="android:actionMenuTextColor">@color/blackSquareColor</item>


        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:windowBackground">@color/whiteSquareColor</item> 
        <item name="android:buttonStyle">@style/BaseButton</item> 
        <item name="android:editTextStyle">@style/BaseEditTextWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarMain">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/darkSquareColor</item>
        <item name="colorPrimaryDark">@color/blackSquareColor</item>
        <item name="colorAccent">@color/redSquareColor</item>
        <item name="android:windowBackground">@color/whiteSquareColor</item>
    </style>

    <style name="CreateJobFlowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/whiteSquareColor</item>
        <item name="colorPrimaryDark">@color/redSquareColor</item>
        <item name="colorAccent">@color/redSquareColor</item>
        <item name="android:textColor">@color/darkSquareColor</item>
        <item name="android:actionMenuTextColor">@color/blackSquareColor</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button Styles --> 

    <style name="BaseButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/redSquareColor</item> 
        <item name="android:textColor">@color/whiteSquareColor</item> 
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseSkipButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/graySquareColor</item> 
        <item name="android:layout_width">match_parent</item> 
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_gray_border_shape</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseSkipWhiteButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/graySquareColor</item> 
        <item name="android:layout_width">match_parent</item> 
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_gray_border_white_solid</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Edit Styles --> 

    <style name="BaseEditTextGray" parent="@android:style/Widget.EditText"> 
        <item name="android:background">@drawable/underlined_666</item> 
        <item name="android:textColor">@color/graySquareColor</item> 
        <item name="android:textColorHint">@color/graySquareColor</item> 
        <item name="android:maxLines">1</item> 
        <item name="android:singleLine">true</item> 
        <item name="android:layout_marginLeft">10dp</item> 
        <item name="android:layout_marginRight">10dp</item> 
        <item name="android:textSize">17sp</item> 
    </style>
     

    <style name="BaseEditTextWhite" parent="@android:style/Widget.EditText"> 
        <item name="android:textColorHint">@color/graySquareColor</item> 
        <item name="android:textColor">@color/graySquareColor</item>
        <item name="android:maxLines">1</item> 
        <item name="android:singleLine">true</item> 
        <item name="android:layout_marginLeft">5dp</item> 
        <item name="android:layout_marginRight">10dp</item> 
        <item name="android:textSize">16sp</item> 
        <item name="android:inputType">textCapWords</item> 
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/apptheme_edit_text</item>
    </style>
     

    <style name="BaseEditTextWhite2" parent="@android:style/Widget.EditText"> 
