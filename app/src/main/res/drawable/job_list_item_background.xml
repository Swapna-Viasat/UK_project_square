<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/redSquareColor"/>
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/whiteSquareColor"/>
        </shape>
    </item>
</layer-list>